@model IEnumerable<WebApp.Models.DTO.UserDTO>
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">User List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="User" asp-action="CreateUser" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Create New User</a>
        </div>
    </div>

    <table class="table">
		<thead>
			<tr>
				<th>
					Id
				</th>
				<th>
					Name
				</th>
				<th>
					Age
				</th>
				<th>
					Phone
				</th>
				<th>
					Email
				</th>
				
				<th></th>
			</tr>
		</thead>
		<tbody>
			@if ( Model != null )
			{
			@foreach(var item in Model)
				{
				<tr>
					<td>@item.Id</td>
					<td>@item.Name</td>
					<td>@item.Age</td>
					<td>@item.Phone</td>
					<td>@item.Email</td>
					<td>
						<a asp-controller="User" asp-action="UpdateUser" asp-route-Id="@item.Id" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
						<a asp-controller="User" asp-action="DeleteUser" asp-route-Id="@item.Id" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
					</td>
					
				</tr>
				}
			}
		</tbody>
    </table>

</div>
<br />